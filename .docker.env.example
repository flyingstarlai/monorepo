# Docker Environment Configuration
# Copy this file to .docker.env and update with your actual values

# Database Configuration (Production)
DB_HOST=your_database_host
DB_PORT=1433
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=account_manager

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# API Configuration
NODE_ENV=production
PORT=3000

# Web Configuration
VITE_API_URL=http://api:3000
VITE_APP_NAME=Account Manager

# Optional: SSL Certificate Paths (for HTTPS)
# SSL_CERT_PATH=/etc/ssl/certs/your-cert.crt
# SSL_KEY_PATH=/etc/ssl/private/your-key.key

# Optional: External Services
# REDIS_URL=redis://redis:6379
# ELASTICSEARCH_URL=http://elasticsearch:9200

# Optional: Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

# Optional: Email Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password